{% extends 'base.html.twig' %}

{% block title %}Hello {{name}}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper-background { background: gray; padding: 2px 6px; }
</style>

<div class="example-wrapper example-wrapper-background container mt-5 p-2">
    <h1>Hello {{ name }}!</h1>

    Here you can get a random Number:
    <a class="btn btn-primary" href="/random/{{random_number}}">Random Number</a>
</div>
{% endblock %}
