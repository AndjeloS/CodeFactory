{% extends 'base.html.twig' %}

{% block title %}Productpage{% endblock %}

{% block body %}
    <h1 class="mt-5">All the products</h1>
    <div class="mt-3 row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-xs-1">
        {% for product in products %}
            <div>
                <div class="card my-3" style="width: 18rem;">
                    <img src="{{product.image}}" class="card-img-top mt-2 mx-2" style="width: 93%; height: 300px;" alt="{{product.name}}">
                    <div class="card-body">
                        <h5 class="card-title">{{product.name}}</h5>
                        <p class="card-text">Price: {{product.price}}</p>
                        <a href="{{path('app_user_detail',{id: product.id})}}" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
