{% extends "base.html.twig" %}
{% block title %}Products Page{% endblock %}

{% block body %}
<div class="container my-3">
    <h1>Products:</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        {% for item in productsArr %}
            <div class="card me-2 my-2" style="width: 18rem;">
                <img src="{{item.image}}" class="card-img-top mt-2" alt="{{item.name}}">
                <div class="card-body">
                    <h5 class="card-title"><span class="badge text-bg-secondary me-2">{{item.id}}</span> {{item.name}}</h5>
                    <p class="card-text">{{item.description}}</p>
                    <a href="" class="btn btn-primary">Product details</a>
                </div>
            </div>
        {% endfor %} 
    </div>
</div>
{% endblock %}