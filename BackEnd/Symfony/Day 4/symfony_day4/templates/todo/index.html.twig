{% extends 'base.html.twig' %}

{% block title %}Todo index{% endblock %}

{% block body %}

    <h1 class="mt-3">Todo List:</h1>

    <div class="mt-5">
        <a href="{{ path('app_todo_new') }}" draggable="false" class="btn btn-success">Create new</a>
    </div>

    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-xs-1 mt-1">
        {% for todo in todos %}
            {% if todo.fkStatus.id == 2 %}
                            <div class="card me-3 my-3" style="width: 18rem;">
                <img src="{{asset('images/todo/') ~ todo.picture}}" draggable="false" class="card-img-top mt-2" style="height: 220px;" alt={{todo.name}}>
                <div class="card-body">
                    <h5 class="card-title">{{ todo.id }} {{todo.name}}</h5>
                    <div class="d-flex justify-content-between my-2">
                        <div>
                        {% if todo.priority == 'low' %}
                            <p class="card-text badge bg-success">{{todo.priority}}</p>      
                        {% endif %}

                        {% if todo.priority == 'medium' %}
                                <p class="card-text badge bg-warning">{{todo.priority}}</p>
                        {% endif %}
                        
                        {% if todo.priority == 'high' %}
                            <p class="card-text badge bg-danger">{{todo.priority}}</p>
                        {% endif %}
                            
                        </div>
                        <div>
                            <p class="card-text">{{ todo.createdAt ? todo.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                        </div>
                    </div>
                    <p class="card-text" style="height: 60px;">Description:<br>{{todo.description}}</p>
                    <div>
                        <a href="{{ path('app_todo_show', {'id': todo.id}) }}" draggable="false" class="btn btn-primary">Details</a>
                        <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" draggable="false" class="btn btn-warning">Edit</a>
                    </div>
                </div>
            </div>
            {% endif %}
        {% else %}
            <h5 style="color: red;">no records found!</h5>
        {% endfor %}
    </div>


    <h2 class="mt-4">Todo Done:</h2>
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-xs-1 mt-1">
        {% for todo in todos %}
            {% if todo.fkStatus.id == 1 %}
                            <div class="card me-3 my-3" style="width: 18rem;">
                <img src="{{asset('images/todo/') ~ todo.picture}}" draggable="false" class="card-img-top mt-2" style="height: 220px;" alt={{todo.name}}>
                <div class="card-body">
                    <h5 class="card-title">{{ todo.id }} {{todo.name}}</h5>
                    <div class="d-flex justify-content-between my-2">
                        <div>
                        {% if todo.priority == 'low' %}
                            <p class="card-text badge bg-success">{{todo.priority}}</p>      
                        {% endif %}

                        {% if todo.priority == 'medium' %}
                                <p class="card-text badge bg-warning">{{todo.priority}}</p>
                        {% endif %}
                        
                        {% if todo.priority == 'high' %}
                            <p class="card-text badge bg-danger">{{todo.priority}}</p>
                        {% endif %}
                            
                        </div>
                        <div>
                            <p class="card-text">{{ todo.createdAt ? todo.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                        </div>
                    </div>
                    <p class="card-text" style="height: fit-content;">Description:<br>{{todo.description}}</p>
                    <div>
                        <a href="{{ path('app_todo_show', {'id': todo.id}) }}" draggable="false" class="btn btn-primary">Details</a>
                        <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" draggable="false" class="btn btn-warning">Edit</a>
                    </div>
                </div>
            </div>
            {% endif %}
        {% else %}
            <h5 style="color: red;">no records found!</h5>
        {% endfor %}
    </div>


{% endblock %}
